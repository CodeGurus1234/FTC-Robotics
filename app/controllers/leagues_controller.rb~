def generate_geocoded_address(teams)
hash = Hash.new()
teams.each do |team|
#if(team[:main_contact_postal_code] !=nil)
  hash[team[:team]] = Geokit::Geocoders::GoogleGeocoder3.geocode("#{team[:main_contact_postal_code]}")
#end
end
return hash
end


