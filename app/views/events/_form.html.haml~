= form_for(@event) do |f|
  - if @league.errors.any?
    #error_explanation
      %h2
        = pluralize(@league.errors.count, "error")
        prohibited this league from being saved:
      %ul
        - @league.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :league_name
    %br/
    = f.text_field :league_name
  .field
    = f.label :team_no
    %br/
    = f.number_field :team_no
  .field
    = f.label :league_admin
    %br/
    = f.text_field :league_admin
  .actions
    = f.submit
